<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coders.bloodbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:background="@drawable/background"
        android:debuggable="true"
        android:icon="@drawable/drop"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.coders.bloodbank.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coders.bloodbank.Donate"
            android:label="@string/title_activity_donate" >
        </activity>
        <activity
            android:name="com.coders.bloodbank.Emergency"
            android:label="@string/title_activity_emergency" >
        </activity>
        <activity
            android:name="com.coders.bloodbank.Camp"
            android:label="@string/title_activity_camp" >
        </activity>
        <activity
            android:name="com.coders.bloodbank.Camptwo"
            android:label="@string/title_activity_camptwo" >
        </activity>
        <activity
            android:name="com.coders.bloodbank.List"
            android:label="@string/title_activity_list"
            android:parentActivityName="com.coders.bloodbank.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coders.bloodbank.MainActivity" />
        </activity>
        <activity
            android:name="com.coders.bloodbank.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>